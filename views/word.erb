<h2>Word Detail Page</h2>

<h3>Word: <span class="green"><%= @word.text() %> </span></h3>

<form action="/word" method="post">
  <div class="form-group">
     <label for="definition">Add Definition:</label>
     <input id="definition" name="definition" class="form-control" type="text">
  </div>
  <div>
    <input type="hidden" name="word_id" value="<%= @word.id() %>">
  </div>
  <button type="submit" class="btn-success">Add</button>
</form>

<br>
<a href="/">Return to Homepage</a>

<hr>
<% if @word != nil %>
  <% if @word.definitions().size() > 0 %>
  <h3>Definitions:</h3>
    <ul>
      <% @word.definitions().each() do |definition| %>
        <li><%= definition.text %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
